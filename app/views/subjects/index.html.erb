<% if !flash[:notice].blank? %>
    <div class>
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>Subjects#index</h1>
<p>Find me in app/views/subjects/index.html.erb</p>

<%= link_to("Add New Subject", new_subject_path, :class => 'action new') %>
<% @subjects.each do |s| %>
    <%= s.position %>
    <%= s.name %>
    <%= link_to("Edit", edit_subject_path(s)) %>
    <%= link_to("Delete", delete_subject_path(s)) %>
<% end %>