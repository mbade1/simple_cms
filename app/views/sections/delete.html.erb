<% if !flash[:notice].blank? %>
    <div class>
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>Sections#delete</h1>
<p>Find me in app/views/subjects/delete.html.erb</p>

<%= form_for(@section, :method => 'delete') do |f| %>
    <p>Are you sure you want to permanently delete this section?</p>
    <%= f.object.name %><br><br>
    <%= f.submit("Delete Subject")%>
<% end %>